@page
@model AreaTop10Model
@{
  ViewData["Title"] = "Top-10 Crimes in Specific Area";
}
 
<h2> Top 10 Crimes in "@Model.AreaName" Area Information</h2>  

<br />
Your search string: "@Model.Input"
<br />
Name of the Area: "@Model.AreaName"
<br />
Number of the Area: @Model.AreaNumber
<br />
<br />
<br />

@{
   if (@Model.EX != null)
	 {
	   <br />
		 <br />
		 <h3>**ERROR: @Model.EX.Message</h3>
		 <br />
		 <hr />
		 <br />
		 <br />
	 }
}

<table class="table">  
    <thead>  
        <tr>  
            <th>  
                Rank
            </th>  
            <th>  
                IUCR
            </th>  
            <th>  
                Description
            </th>   
            <th>  
                TotalNumOfCrimes
            </th>
            <th>  
                PercentOfCrime
            </th>  
            <th>  
                PercentageOfArrest
            </th>  
        </tr>  
    </thead>  
    <tbody>  
				@{
				   int rank = 1;
				 }
				
        @foreach (var item in Model.CrimeList)  
        {  
            <tr>  
                <td>  
										@rank
                </td>  
                <td>  
                    @item.IUCR
                </td>  
                <td>  
                    @item.PrimaryDesc
                </td>  
                <td>  
                    @item.TotalNumOfCrimes
                </td>  
                <td>  
                    @item.PercentOfCrime
                </td>  
                <td>  
                    @item.PercentageOfArrest
                </td>  
            </tr>  
						
						rank++;
        }  
    </tbody>  
</table> 